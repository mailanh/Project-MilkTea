
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            @if (Session["Name"] != null && Session["Avatar"] != null)
            {
                <div class="pull-left image">
                    <img src="~/Assets/Admin/dist/img/@Session["Avatar"]" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>@Session["Name"]</p>
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            }
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li><a href="/Admin/DashBoard/Index"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-edit"></i> <span>Quản lý bán hàng</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="active">
                        <a href="/Admin/Product/Index">
                            <i class="fa fa-circle-o"></i><span>Quản lý sản phẩm</span>
                            <span class="pull-right-container">
                                <small class="label pull-right bg-green">@ViewBag.CountPr</small>
                            </span>
                        </a>

                    </li>
                    <li>
                        <a href="/Admin/Home/ProductCategory">
                            <i class="fa fa-circle-o"></i>
                            <span> Loại sản phẩm</span>
                            <span class="pull-right-container">
                                <small class="label label-primary pull-right">@ViewBag.Loaisp</small>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Home/Order">
                            <i class="fa fa-circle-o"></i>
                            <span>Đơn hàng</span>
                            <span class="pull-right-container">
                                <small class="label label-info pull-right">@ViewBag.hd</small>
                            </span>
                        </a>
                    </li>
                    <li><a href="#"><i class="fa fa-circle-o"></i>Hóa đơn nhập</a></li>
                </ul>
            </li>

            <li>
                <a href="/Admin/Custumer/Index">
                    <i class="fa fa-users"></i> <span>Quản lý khách hàng</span>
                    <span class="pull-right-container">
                        <small class="label pull-right bg-red">@ViewBag.CountCtm</small>
                    </span>
                </a>
            </li>
            <li>
                <a href="/Admin/User/Index">
                    <i class="fa fa-user"></i> <span>Quản lý User</span>
                    <span class="pull-right-container">
                        <small class="label pull-right bg-yellow">@ViewBag.Coutuser</small>
                    </span>
                </a>
            </li>
            <li><a href="#"><i class="fa fa-book"></i> <span>Documentation</span></a></li>
            <li class="header">Contact with admin</li>
            <li>
                <a target="_blank" href="https://www.facebook.com/mailanh1997">
                    <i class="fa fa-facebook-official text-blue"></i>
                    <span>FaceBook</span>
                </a>
            </li>
            <li><a href="#"><i class="fa  fa-instagram text-yellow"></i> <span>Instagram</span></a></li>
            <li><a href="#"><i class="fa fa-twitter text-aqua"></i> <span>Twitter</span></a></li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>